<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/base_head"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/bgGray"
    android:orientation="vertical"
    >
            

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/title_height"
        android:background="@color/appcolor"
        >


        <ImageView
            android:id="@+id/base_head_back"
            android:layout_width="@dimen/icon_w26"
            android:layout_height="@dimen/icon_h26"
            android:layout_centerVertical="true"
            android:layout_margin="@dimen/margin_10"
        android:background="@drawable/ic_arrow_back_black_24dp"
            />

        <TextView
            android:id="@+id/base_head_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:textColor="@color/txtblack"
            android:textSize="@dimen/text_17"
        android:textStyle="bold"
            />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:orientation="horizontal"
            >

            <TextView
                android:id="@+id/base_head_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_margin="@dimen/margin_10"
                android:visibility="gone"
                />

            <ImageView
                android:id="@+id/base_head_iv_one"
                android:layout_width="@dimen/icon_w26"
                android:layout_height="@dimen/icon_h26"
                android:layout_gravity="center_vertical"
                android:layout_margin="@dimen/margin_10"
          android:background="@drawable/icon_questionmark"
                />

            <ImageView
                android:id="@+id/base_head_iv_two"
                android:layout_width="@dimen/icon_w26"
                android:layout_height="@dimen/icon_h26"
                android:layout_gravity="center_vertical"
                android:layout_margin="@dimen/margin_10"
                android:visibility="gone"
                />
        </LinearLayout>
    </RelativeLayout>

    <ProgressBar
        android:id="@+id/pb_title"
        style="@style/Widget.AppCompat.ProgressBar.Horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@null"
        android:max="100"
        android:maxHeight="2dp"
        android:minHeight="15dp"
        android:progress="25"
        android:visibility="gone"
        android:progressDrawable="@drawable/bg_progress_bar"/>
</LinearLayout>