<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    
    <style name="segmentLine">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1px</item>
        <item name="android:background">@color/segLineGray</item>
        <item name="android:layout_marginLeft">@dimen/margin_20</item>
        <item name="android:layout_marginRight">@dimen/margin_20</item>
    </style>

<style name="registerFirsttxt">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/tv_high_40</item>
        <item name="android:textColor">@color/txtblack</item>
        <item name="android:gravity">center|left</item>
        <item name="android:textSize">@dimen/text_18</item>
        <item name="android:drawablePadding">@dimen/margin_15</item>

    </style>


  <style name="registerFirsttxtBold">
    <item name="android:layout_width">match_parent</item>
    <item name="android:layout_height">@dimen/tv_high_40</item>
    <item name="android:textColor">@color/txtblack</item>
    <item name="android:gravity">center|left</item>
    <item name="android:textSize">@dimen/text_18</item>
    <item name="android:drawablePadding">@dimen/margin_15</item>
    <item name="android:textStyle">bold</item>

  </style>



  <style name="buttonstyle">
    <item name="android:layout_marginTop">@dimen/margin_15</item>
    <item name="android:layout_width">match_parent</item>
    <item name="android:layout_height">@dimen/tv_high_40</item>
    <item name="android:text">@string/bt_next</item>
    <item name="android:textSize">@dimen/text_18</item>
    <item name="android:background">@drawable/button_selector</item>
    <item name="android:layout_marginLeft">@dimen/margin_20</item>
    <item name="android:layout_marginRight">@dimen/margin_20</item>
  </style>
 

    <!-- 下载进度条样�-->
    <style name="progressBarHorizontal" parent="android:Widget.ProgressBar.Horizontal">
        <item name="android:indeterminateOnly">false</item>
        <item name="android:progressDrawable">@drawable/htjc_progress_horizontal</item>
        <item name="android:minHeight">5dp</item>
        <item name="android:maxHeight">60dp</item>
    </style>
</resources>
